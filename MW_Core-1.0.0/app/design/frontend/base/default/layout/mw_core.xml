<?xml version="1.0"?>
<layout version="0.1.0">
    <catalog_category_layered>
        <reference name="product_list">
            <action method="setTemplate">
                 <value>mw/core/catalog/product/list.phtml</value>
            </action>    
            <block type="core/template" name="product_list.addtocart" as="product_list_addtocart" template="mw/core/catalog/product/list/addtocart.phtml"/>            
            <block type="core/template" name="product_list.addtocompare" as="product_list_addtocompare" template="mw/core/catalog/product/list/addtocompare.phtml"/>            
            <block type="core/template" name="product_list.addtowishlist" as="product_list_addtowishlist" template="mw/core/catalog/product/list/addtowishlist.phtml"/>            
            <block type="core/text_list" name="product_list.inner_image" as="product_list_inner_image"/>
            <block type="core/text_list" name="product_list_extra" as="product_list_extra"/>
        </reference>
    </catalog_category_layered>        
    <catalog_category_default>
       <reference name="product_list">
            <action method="setTemplate">
                <value>mw/core/catalog/product/list.phtml</value>
            </action>
            <block type="core/template" name="product_list.addtocart" as="product_list_addtocart" template="mw/core/catalog/product/list/addtocart.phtml"/>            
            <block type="core/template" name="product_list.addtocompare" as="product_list_addtocompare" template="mw/core/catalog/product/list/addtocompare.phtml"/>            
            <block type="core/template" name="product_list.addtowishlist" as="product_list_addtowishlist" template="mw/core/catalog/product/list/addtowishlist.phtml"/>            
            <block type="core/text_list" name="product_list.inner_image" as="product_list_inner_image"/>                        
            <block type="core/text_list" name="product_list_extra" as="product_list_extra"/>
        </reference>
    </catalog_category_default>
    
    <catalog_product_view translate="label">
        <reference name="product.info.addto">
            <action method="setTemplate">
                <value>mw/core/catalog/product/view/addto.phtml</value>
            </action>             
            <block type="core/template" name="product.info.addto.wishlist" as="product_info_addto_wishlist" template="mw/core/catalog/product/view/addto/towishlist.phtml"/>            
            <block type="core/template" name="product.info.addto.compare" as="product_info_addto_compare" template="mw/core/catalog/product/view/addto/tocompare.phtml"/>            
        </reference>
    </catalog_product_view>
</layout> 